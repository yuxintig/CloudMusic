/* components/playlist/playlist.wxss */
.playlist-img {
  width: 100%;
  height: 220rpx;
  margin: 5rpx;
  border-radius: 12rpx;
}

.playlist-name {
  overflow: hidden;
  text-overflow: ellipsis;
  display: -webkit-box;
  -webkit-line-clamp: 2;
  -webkit-box-orient: vertical;
  font-size: 26rpx;
  padding: 4rpx 0 0 12rpx;
}

.playlist-playcount{
  font-size: 24rpx;
  color: #fff;
  text-shadow: 1px 0 0 rgba(0, 0, 0, 0.15);
  position: absolute;
  right: 10rpx;
  top: 4rpx;
  padding-left: 26rpx;
  background:url(data:image/png;base64,) no-repeat 0 8rpx/22rpx 20rpx
}

.playlist-container {
  padding-bottom: 20rpx;
  width: 230rpx;
  position: relative;
}