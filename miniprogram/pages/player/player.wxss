.container {
  position: absolute;
  top: 5%;
  left: 2%;
  width: 0%;
  height: 100%;
  z-index: -1;
}

.wave {
  position: relative;
  width: 400px;
  height: 400px;
  text-align: center;
  line-height: 100px;
  font-size: 28px;
}

.wave .circle {
  position: absolute;
  border-radius: 50%;
  opacity: 0;
}

/* 波纹效果 */
.wave.ripple .circle {
  width: calc(100% - 9px); /* 减去边框的大小 */
  height: calc(100% - 9px);/* 减去边框的大小 */
  border: 5px solid rgb(255, 183, 0);
}

.wave.ripple.play .circle:first-child {
  animation: circle-opacity 2s infinite;
}

.wave.ripple.play .circle:nth-child(2) {
  animation: circle-opacity 2s infinite;
  animation-delay: .3s;
}

.wave.ripple.play .circle:nth-child(3) {
  animation: circle-opacity 2s infinite;
  animation-delay: .6s;
}

.wave.ripple.danger {
  color: red;
}

.wave.ripple.danger .circle {
  border-color: rgb(0, 0, 0);
}



@keyframes circle-opacity{
  from {
      opacity: 1;
      transform: scale(0);
  }
  to {
      opacity: 0;
      transform: scale(1);
  }
}

.progress-bar{
  width: 90%;
  position: absolute;
  left: 50%;
  transform: translateX(-50%);
  bottom: 24%;
}